package animal;

import javax.swing.JOptionPane;

public class Animal {
    
    
    //--Atributos
    String nome;
    String especie;
    String cor;
    float peso;
    int idade;
    
    //--Construtor default
    public Animal(){
    }
    
    //--Construtor com parametros
    public Animal(String nome, String especie, String cor, float peso, int idade){
        this.nome = nome;
        this.especie = especie;
        this.cor = cor;
        this.peso = peso;
        this.idade = idade;
    }
    
    public Animal (String nome, String especie){
        this.nome = nome;
        this.especie = especie;
    }
    
    //--Metodos sem retorno
    public void alimentar(){
        JOptionPane.showMessageDialog(null,"O animal est√° se alimentando!");
    }
    
    //--Metodo com retorno
    public String movimentar(){
        String move = JOptionPane.showInputDialog("Como ele se movimenta?");
        return move;
    }
    //--Metodo com retorno e com argumentos
    public float calcularTamanho(float comprimento, float largura){
        float tamanho = comprimento * largura;
        return tamanho;
    }
 
    
}
